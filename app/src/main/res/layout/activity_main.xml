<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.sam.universal_interface.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_above="@+id/linear_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:id="@+id/linear_tab"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_update1"
            android:textAllCaps="false"
            android:text="update1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_update2"
            android:textAllCaps="false"
            android:text="update2"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_update3"
            android:textAllCaps="false"
            android:text="update3"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_update4"
            android:textAllCaps="false"
            android:text="update4"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />



    </LinearLayout>

</RelativeLayout>
